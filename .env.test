# Test Environment Configuration
# This file contains environment variables for test execution
# DO NOT commit this file with real credentials

# Application
NODE_ENV=test
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Test Database (PostgreSQL)
TEST_DATABASE_URL=postgresql://test_user:test_pass_123@localhost:5433/notion_calendar_test
DATABASE_URL=${TEST_DATABASE_URL}

# Test Cache (Redis)
TEST_REDIS_URL=redis://:test_redis_pass@localhost:6380
REDIS_URL=${TEST_REDIS_URL}

# Test NoSQL Database (MongoDB)
TEST_MONGODB_URL=mongodb://test_user:test_pass_123@localhost:27018/notion_calendar_test
MONGODB_URL=${TEST_MONGODB_URL}

# Test Object Storage (MinIO)
TEST_MINIO_ENDPOINT=localhost:9000
TEST_MINIO_ACCESS_KEY=test_minio_user
TEST_MINIO_SECRET_KEY=test_minio_pass_123
TEST_MINIO_BUCKET=test-bucket

# AWS Services Mock (LocalStack)
TEST_AWS_ENDPOINT=http://localhost:4566
TEST_AWS_REGION=us-east-1
TEST_AWS_ACCESS_KEY_ID=test
TEST_AWS_SECRET_ACCESS_KEY=test

# Email Testing (Mailhog)
TEST_SMTP_HOST=localhost
TEST_SMTP_PORT=1025
TEST_MAILHOG_UI=http://localhost:8025

# Testcontainers Configuration
USE_TESTCONTAINERS=false  # Set to 'true' to use programmatic containers instead of Docker Compose

# Test Execution Settings
TEST_TIMEOUT=30000
TEST_RETRY_COUNT=2
TEST_PARALLEL=true

# Playwright Configuration
PLAYWRIGHT_BASE_URL=http://localhost:3001
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium

# API Testing
TEST_API_URL=http://localhost:3001/api
TEST_API_TIMEOUT=10000

# Feature Flags for Testing
ENABLE_TEST_FIXTURES=true
ENABLE_TEST_MOCKS=true
ENABLE_TEST_LOGGING=true
