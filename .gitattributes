*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.mdx text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.markdown text eol=lf
*.txt text eol=lf

# Config files
.gitattributes text eol=lf
